<div class="container">
  <%= render "shared/show_search_form" %>
  <h5 class="bottom-space" style="font-size: 20px">Cats at <%= params[:cat][:address].capitalize %> available on <%= params[:cat][:date] %></h5>
  <div class="row">
    <% @cats.each do |cat| %>
      <div class="col-md-4 col-sm-6 col-xs-12 bottom-space">
        <%= link_to cat_path(cat) do %>
          <div class="card" style="background-image: linear-gradient(90deg, rgba(0,0,0,0.4), rgba(0,0,0,0.2), rgba(0,0,0,0.4)), url('<%= cl_image_path cat.photo.path, height: 250 %>');">
            <h2><%= cat.name %></h2>
            <p><%= cat.price %>â‚¬/day</p>
              <% unless cat.average_rating.zero? %>
                <ul class="list-inline avg-rating">
                  <% cat.average_rating.times do %>
                    <li><%= image_tag 'footprints-cat-16.png' %></li>
                  <% end %>
                </ul>
              <% end %>
          </div>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
