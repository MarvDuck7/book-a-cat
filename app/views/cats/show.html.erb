<div class="show-banner bottom-space" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('<%= cl_image_path @cat.photo.path %>');">
</div>

<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-6 text-center">
      <%= cl_image_tag @cat.photo.path, aspect_ratio: "16:9", crop: :fill, class: "small-img" %>
    </div>

    <div class="col-sm-12 col-md-6 text-center">
      <h1><%= @cat.name %></h1>
      <p><%= @cat.description %></p>
      <p><%= @cat.address %></p>
      <p><%= @cat.price %> â‚¬ / day</p>
      <p>Available on Mondays and Fridays</p>
      <hr>
      <%= simple_form_for @cat, url: user_bookings_path(current_user), method: :post do |f| %>
        <%= f.submit "Book", class: "btn btn-primary btn-lg bottom-space" %>
      <% end %>
    </div>
  </div>
</div>
