<div class= "show-banner" style="background-image: linear-gradient(90deg, rgba(0,0,0,1), rgba(0,0,0,0.2), rgba(0,0,0,1)), url('<%= cl_image_path @cat.photo.path %>');">

</div>


<div class="container">
  <h1>cats#show</h1>
  <%= @cat.name %>
</div>



<%= simple_form_for [@cat, @bookings] do |f| %>
  <% if @cat.errors.any? %>
    <ul>
    <% @cat.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  <% end %>
  
  <%= f.submit "book", class: "btn btn-primary"%>
<% end %>
