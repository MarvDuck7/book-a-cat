<div class="container">
  <%= simple_form_for :cat, url: cats_path, method: :get do |f| %>
    <div class="form-group row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-2">
        <%= f.input :address, placeholder: "Your city", input_html: { class: "input-lg" }, label_html: { class: "hidden" } %>
      </div>

      <div class="col-xs-12 col-sm-4">
        <%= f.input :date, as: :string, input_html: { class: "input-lg datepicker placeholder-padding" }, label_html: { class: "hidden" }, placeholder: "Pick a date" %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-12 col-sm-4 col-sm-offset-4">
        <%= f.button :submit, "Find a cat", class: "btn btn-primary btn-lg" %>
      </div>
    </div>
  <% end %>
</div>
