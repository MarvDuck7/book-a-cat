<%= simple_form_for @cat do |f| %>
  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :address %>
  <%= f.input :price %>
  <%= f.input :photo, label: "Add a photo", as: :attachinary, input_html: { class: "hidden" }, label_html: { class: "btn btn-primary" } %>
  <%= f.button :submit, class: "btn btn-primary btn-lg" %>
<% end %>
